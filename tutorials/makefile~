CMP = g++
MAIN1 = CApp
MAIN2 = Capp_OnInit
MAIN3 = Capp_OnEvent
MAIN4 = Capp_OnLoop
MAIN5 = Capp_OnRender
MAIN6 = Capp_OnCleanup
EXEC1 = $(MAIN1)
EXEC2 = $(MAIN2)
EXEC3 = $(MAIN3)
EXEC4 = $(MAIN4)
EXEC5 = $(MAIN5)
EXEC6 = $(MAIN6)
FLAGS = -lSDL2

all: $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5) $(EXEC6) 

$(EXEC1): $(MAIN1).c
	$(CMP) $(MAIN1).c -o $(EXEC1) $(FLAGS) 

$(EXEC2): $(MAIN2).c
	$(CMP) $(MAIN2).c -o $(EXEC2) $(FLAGS) 

$(EXEC3): $(MAIN3).c
	$(CMP) $(MAIN3).c -o $(EXEC3) $(FLAGS) 

$(EXEC4): $(MAIN4).c
	$(CMP) $(MAIN4).c -o $(EXEC4) $(FLAGS) 

$(EXEC5): $(MAIN5).c
	$(CMP) $(MAIN5).c -o $(EXEC5) $(FLAGS) 

$(EXEC6): $(MAIN6).c
	$(CMP) $(MAIN6).c -o $(EXEC6) $(FLAGS) 

clean:
	rm $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5) $(EXEC6) 
